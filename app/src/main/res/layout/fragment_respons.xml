<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="@dimen/_8sdp"
    android:layout_marginTop="@dimen/_16sdp"

    android:layout_marginEnd="@dimen/_8sdp"
    android:background="@drawable/board_background"
    android:orientation="vertical"
    app:layout_constraintBottom_toTopOf="@+id/btnSelect"
    app:layout_constraintEnd_toStartOf="@id/imageView"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_18sdp"
        android:gravity="center"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_12sdp"
            android:src="@drawable/main_arrow_orange" />


        <TextView
            android:id="@+id/txtIntro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/let_s_play_the"
            android:textColor="@color/purpleColor"
            android:textSize="@dimen/_16ssp"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/button_purple_border"
        android:orientation="horizontal"
        android:padding="@dimen/_8sdp">

        <TextView
            android:id="@+id/txtQuestionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/emotion_imitation"
            android:textColor="@color/orangeColor"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold" />



    </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_4sdp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        >

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSendResponseToRobot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_orange"
        android:text="@string/send_response_in_robot"
        android:visibility="gone"
        android:layout_gravity="end"
        android:textColor="@color/white"
        android:padding="@dimen/_4sdp"


        android:layout_marginEnd="@dimen/_8sdp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSendResponseWellDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_orange"
        android:text="@string/well_done"
        android:paddingStart="@dimen/_4sdp"
        android:paddingEnd="@dimen/_4sdp"
        android:visibility="gone"
        android:layout_gravity="end"
        android:textColor="@color/white"
        android:padding="@dimen/_4sdp"

        android:layout_marginEnd="@dimen/_4sdp"
        />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        >

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSendResponseYouAreAStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_orange"
        android:text="@string/you_are_a_star"
        android:layout_gravity="end"
        android:textColor="@color/white"
        android:padding="@dimen/_4sdp"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/_4sdp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSendResponseYoCanDoIt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_orange"
        android:text="@string/you_can_do_it"
        android:layout_gravity="end"
        android:textColor="@color/white"
        android:padding="@dimen/_4sdp"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/_4sdp"
        />


    </LinearLayout>

</LinearLayout>

