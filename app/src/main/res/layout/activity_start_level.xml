<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".view.StartLevelActivity">


    <TextView
        android:id="@+id/txtLevelName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/impacted"
        android:text="M1 U1 Emotion \n Imitation"
        android:textAlignment="center"
        android:textColor="@color/white"

        android:textSize="@dimen/_30ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageLogo" />

    <TextView
        android:id="@+id/txtLevelObjective"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_46sdp"
        android:paddingEnd="@dimen/_46sdp"

        android:text="@string/level_desc"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:lineSpacingExtra="@dimen/_4sdp"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toEndOf="@id/txtLevelName"
        app:layout_constraintStart_toStartOf="@id/txtLevelName"
        app:layout_constraintTop_toBottomOf="@id/txtLevelName" />


    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_12sdp"
        android:src="@drawable/click_health_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <ImageView
        android:id="@+id/imageHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:src="@drawable/home_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"


        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:src="@drawable/robot_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNext"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@drawable/button_gradient_red"
        android:padding="@dimen/_6sdp"
        android:text="NEXT"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/btnPrevious"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imageView"
        app:layout_constraintTop_toBottomOf="@id/txtLevelObjective"
        app:layout_constraintVertical_bias="0.78" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnPrevious"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@drawable/button_gradient_red"
        android:padding="@dimen/_6sdp"
        android:text="PREVIOUS"
        android:textColor="@color/white"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnNext"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toEndOf="@id/imageHome"
        app:layout_constraintTop_toBottomOf="@id/txtLevelObjective"
        app:layout_constraintVertical_bias="0.78" />
</androidx.constraintlayout.widget.ConstraintLayout>